<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".more.CPT_More_LocationPermission">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:background="@color/colorofcalgarytransit">
                <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:id="@+id/tvmore_locationpermit_cancel"
                        android:text="@string/cancel">
                </TextView>
                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                </View>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-black"
                        android:textSize="20sp"
                        android:text="@string/smore_locationpermit">
                </TextView>
                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                </View>
                <View
                        android:layout_width="100dp"
                        android:layout_height="match_parent">
                </View>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-black"
                        android:id="@+id/tvmore_locationpermit_status"
                        tools:text="@string/smore_locationpermission_status">
                </TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@android:color/holo_blue_dark"
                        android:id="@+id/tvmore_locationpermit_setting"
                        tools:text="@string/smore_locationpermission_setting">
                </TextView>
        </LinearLayout>

</LinearLayout>