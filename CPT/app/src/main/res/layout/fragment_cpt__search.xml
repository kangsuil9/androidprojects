<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/frame_search"
        tools:context=".Search.CPT_Search">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:id="@+id/lls_searchBar"
            android:background="@color/whitegray">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/ss_main_routestop">
        </TextView>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_search_black_24dp">
        </ImageView>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lls_searchBar"
            android:id="@+id/lvs_likelist">
    </ListView>

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--
        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nss_main_search"
                android:background="@android:color/white"
                android:overScrollMode="never"
                app:layout_behavior="@string/bottom_sheet_behavior"
                app:behavior_hideable="true"
                app:behavior_peekHeight="0dp"
                android:fillViewport="true">
        -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lls_bottomsheet"
                app:layout_behavior="@string/bottom_sheet_behavior"
                app:behavior_hideable="true"
                app:behavior_peekHeight="0dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/colorofcalgarytransit"
                    android:orientation="horizontal">
                <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:paddingStart="10dp"
                        android:hint="@string/ss_main_routestop"
                        android:id="@+id/ets_main_routeorstation"
                        android:layout_marginStart="10dp">
                </EditText>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_clear_black_24dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/ivs_main_closesearchview">
                </ImageView>
            </LinearLayout>
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:id="@+id/lvs_main_searchlist">
            </ListView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>